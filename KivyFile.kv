WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"

    Button:
        text: "Open Camera"
        size_hint: .6,.1
        pos_hint: {"center_x": 0.5, "center_y":.2}
        width: "100dp" 
        on_release:
            app.root.current = "second" 
            root.manager.transition.direction = "left"

    Button:
        text: "Jam Features"
        size_hint: .4,.08
        pos_hint: {"left":1,"top":1}
        width: "100dp" 
        # add on_press when you want to publish and test it on mobile 
        
    Label: 
        text:"Press 'Open Camera' to access the camera"
        size_hint: 1,.3
        pos_hint: {"center_x": 0.5, "center_y":.7}

<SecondWindow>:
    name: "second"

    Camera:
        play:True
        id: camera
        resolution:1080,1080

    Button:
        text: 'Stop'
        on_release: camera.play = False
        size_hint: .5,.1
        pos_hint:{"left":1,"bottom":1}
        
    Button:
        text: 'Start'
        on_release: camera.play = True
        size_hint: .5,.1
        pos_hint:{"right":1,"bottom":1}
    Button:
        text: 'Back to main screen'
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
        size_hint: 1,.1
        pos_hint:{"top":1}
            